{
    "id": "a12161bb-265f-4979-80db-65f739dcc156",
    "name": "generate-usdz",
    "description": "Create usdz web asset",
    "version": "1",
    "start": "pickup",

    "parameterSchema": {
        "type": "object",
        "properties": {
            "sourceMeshFile": {
                "type": "string",
                "minLength": 1,
                "format": "file"
            },
            "sourceDiffuseMapFile": {
                "type": "string",
                "minLength": 1,
                "format": "file"
            },
            "sourceMtlFile": {
                "type": "string",
                "minLength": 1,
                "format": "file"
            },
            "outputMeshFileName": {
                "type": "string",
                "minLength": 1
            },
            "tool": {
                "type": "string",
                "enum": [
                    "Unity",
                    "RapidCompact"
                ],
                "default": "Unity"
            }
        },
        "required": [
            "sourceMeshFile"
        ],
        "additionalProperties": false
    },

    "steps": {
        "pickup": {
            "task": "Pickup",
            "description": "Fetch input files from client",
            "pre": {
                "outputMeshFileName": "$baseName($firstTrue(outputMeshFileName, sourceMeshFile))"
            },
            "parameters": {
                "method": "transportMethod",
                "path": "$firstTrue(pickupPath, $currentDir)",
                "files": {
                    "sourceMeshFile": "sourceMeshFile",
                    "sourceDiffuseMapFile": "sourceDiffuseMapFile",
                    "sourceMtlFile": "sourceMtlFile"
                }
            },
            "success": "'web-asset-usdz'",
            "failure": "$failure"
        },
        "web-asset-usdz": {
            "task": "GenerateUsdz",
            "description": "Create usdz asset",
            "pre": {
                "deliverables": {
                    "webAssetUsdz": "outputMeshFileName & '.usdz'"
                }
            },
            "parameters": {
                "outputFile": "deliverables.webAssetUsdz",
                "objFile": "sourceMeshFile",
                "textureFile": "sourceDiffuseMapFile",
                "mtlFile": "sourceMtlFile",
                "tool": "tool"
            },
            "success": "'delivery'",
            "failure": "$failure"

        },
        "delivery": {
            "task": "Delivery",
            "description": "Send result files back to client",
            "parameters": {
                "method": "transportMethod",
                "path": "$firstTrue(deliveryPath, pickupPath, $currentDir)",
                "files": "deliverables"
            },
            "success": "$success",
            "failure": "$failure"
        }
    }
}