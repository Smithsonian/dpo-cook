{
    "id": "967ed977-055e-41c8-a836-b1372be3b3ca",
    "name": "unwrap",
    "description": "Unwrap decimated mesh using RizomUV",
    "version": "3",
    "start": "unwrap",

    "parameterSchema": {
        "type": "object",
        "properties": {
            "sourceMeshFile": {
                "type": "string",
                "minLength": 1,
                "format": "file"
            },
            "outputFileBaseName": {
                "type": "string",
                "minLength": 1
            },
            "tool": {
                "type": "string",
                "enum": [
                    "RizomUV",
                    "Unknit",
                    "RapidCompact",
                    "Blender"
                ],
                "default": "RizomUV"
            },
            "mapSize": {
                "type": "integer",
                "minimum": 128,
                "maximum": 8192,
                "default": 4096
            },
            "unwrapSegmentationStrength": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.6
            },
            "unwrapPackEffort": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.7
            },
            "cutHandles": {
                "type": "boolean",
                "default": true
            }
        },
        "required": [
            "sourceMeshFile",
            "mapSize"
        ],
        "additionalProperties": false
    },

    "steps": {
        "unwrap": {
            "task": "UnwrapMesh",
            "description": "Unwrap mesh using RizomUV",
            "pre": {
                "outputFileBaseName": "$baseName($firstTrue(outputFileBaseName, sourceMeshFile))",
                "deliverables": {
                    "unwrappedMeshObjFile": "outputFileBaseName & '-unwrapped-' & $lowercase(tool) & '.obj'",
                    "unwrappedMeshFbxFile": "tool = 'RizomUV' ? outputFileBaseName & '-unwrapped-' & $lowercase(tool) & '.fbx' : ''"
                }
            },
            "parameters": {
                "inputMeshFile": "sourceMeshFile",
                "outputMeshFile": "deliverables.unwrappedMeshObjFile",
                "saveFbx": true,
                "saveObj": true,
                "mapSize": "mapSize",
                "segmentationStrength": "unwrapSegmentationStrength",
                "packEffort": "unwrapPackEffort",
                "cutHandles": "cutHandles",
                "timeout": 1800,
                "tool": "tool"
            },
            "success": "'delivery'",
            "failure": "$failure"
        },
        "delivery": {
            "task": "Delivery",
            "description": "Send result files back to client",
            "parameters": {
                "method": "none",
                "path": "$currentDir",
                "files": "deliverables"
            },
            "success": "$success",
            "failure": "$failure"
        }
    }
}